# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=AI Video Retriever API
API_VERSION=1.0.0

# Data Paths
DATA_ROOT=app/data
KEYFRAME_DIR=app/data/keyframe
INDEX_DIR=app/data/index
MAPPING_KF_PATH=app/data/index/mapping_kf.json
MAPPING_SCENE_PATH=app/data/index/mapping_scene.json

# Search Configuration
DEFAULT_TOP_K=10
MAX_TOP_K=100
DEFAULT_SEARCH_METHOD=ensemble

# Ensemble Weights (will be normalized automatically)
# CLIP: 1, BEiT3: 2, BLIP2: 1
CLIP_WEIGHT=1.0
BEIT3_WEIGHT=2.0
BLIP2_WEIGHT=1.0

# Score Scaling Method (min_max, z_score, percentile)
SCORE_SCALE_METHOD=min_max

# Model Configuration
DEVICE=cuda
BATCH_SIZE=16

# Embedding Server URL (for remote embedding API)
EMBEDDING_SERVER_URL=https://15b38d443cf3.ngrok-free.app

# Gemini API (Optional)
# GEMINI_API_KEY=your_gemini_api_key_here

# Elasticsearch Configuration (Optional)
# ELASTICSEARCH_HOST=localhost
# ELASTICSEARCH_PORT=9200
# ELASTICSEARCH_INDEX=video_index

# Qdrant Configuration (gRPC only)
QDRANT_HOST=localhost
QDRANT_GRPC_PORT=6334
QDRANT_HTTP_PORT=6333
QDRANT_TIMEOUT=30
QDRANT_WAIT_TIMEOUT=20
QDRANT_RETRY_ATTEMPTS=5
QDRANT_RETRY_DELAY=3
QDRANT_BATCH_SIZE=500
# QDRANT_API_KEY=your_qdrant_api_key_here
# VECTOR_SIZE=768  # Optional: Vector dimensions. If not set, will auto-detect from .bin files

# Logging
LOG_DIR=logs

